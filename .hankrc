# .hankrc - Hank project configuration
# Generated by: hank enable
# Documentation: https://github.com/jacklenzotti/hank

# Project identification
PROJECT_NAME="hank-dash"
PROJECT_TYPE="javascript"

# Loop settings
MAX_CALLS_PER_HOUR=100
CLAUDE_TIMEOUT_MINUTES=15
CLAUDE_OUTPUT_FORMAT="json"

# Tool permissions
# Comma-separated list of allowed tools
ALLOWED_TOOLS="Write,Read,Edit,Bash(git *),Bash(gh *),Bash(npm *),Bash(npx *),Bash(node *),Bash(pytest),Bash(ls *),Bash(cat *),Bash(find *),Bash(mkdir *),Bash(cp *),Bash(mv *),Bash(rm *)"

# Session management
SESSION_CONTINUITY=true
SESSION_EXPIRY_HOURS=24

# Task sources (for hank enable --sync)
# Options: local, beads, github (comma-separated for multiple)
TASK_SOURCES="github,local"
GITHUB_TASK_LABEL="hank"
BEADS_FILTER="status:open"

# Circuit breaker thresholds
CB_NO_PROGRESS_THRESHOLD=3
CB_SAME_ERROR_THRESHOLD=5
CB_OUTPUT_DECLINE_THRESHOLD=70
